<view class="tabTit box tc bg_f">
	<view class="flex1{{!tab[index]?' active':''}}" wx:for="{{tabTxt}}" wx:key="" data-index="{{index}}" bindtap="filterTab">
		<text class='text'>{{item}}</text>
		<image src="/images/下拉.png"></image>
	</view>
</view>
<view bindtap = "showall" class="tabLayer tc text" hidden="{{tab[0]}}">
</view>

<view class="tabLayer tc text" hidden="{{tab[1]}}">
	<text class="{{house_type==0?'active':''}}" data-id="0" data-index="0" data-txt="心愿形式" bindtap="filter3">个人物质</text>
  	<text class="" data-id="0" data-index="0" data-txt="心愿形式" bindtap="filter4">个人服务</text>
	<text class="" wx:for="{{filterList.space_list}}" wx:key="" data-id="{{item.id}}" data-index="0" data-txt="{{item.name}}" bindtap="filter">{{item.name}}</text>
</view>

<view class="tabLayer tc text" hidden="{{tab[2]}}">
	<text wx:for ="{{area}}" class="" data-id="0" data-index="0" data-txt="地区" 
  bindtap="{{item.tapid}}">{{item.areaname}}</text>
  
	<text class="" wx:for="{{filterList.space_list}}" wx:key="" data-id="{{item.id}}" data-index="0" data-txt="{{item.name}}" bindtap="filter">{{item.name}}</text>
</view>

<view class="tabLayer tc text" hidden="{{tab[3]}}">
	<text class="" data-id="0" data-index="0" data-txt="认领状态" bindtap="filter14">未认领</text>
  	<text class="" data-id="0" data-index="0" data-txt="认领状态" bindtap="filter15">已认领</text>
    	<text class="" data-id="0" data-index="0" data-txt="认领状态" bindtap="filter16">待审核</text>
      	<text class="" data-id="0" data-index="0" data-txt="认领状态" bindtap="filter17">已完成</text>
	<text class="" wx:for="{{filterList.space_list}}" wx:key="" data-id="{{item.id}}" data-index="0" data-txt="{{item.name}}" bindtap="filter">{{item.name}}</text>
</view>




<view >
    <scroll-view scroll-y class='scrolls'>
      <view class='item' wx:for="{{record}}" bindtap="jmpToDetail" data-detail-id="{{item.xyId}}">
        <image class="image" src="/images/cry.jpg" ></image>
        <view class="item_word">
          <view>{{item.xyRequest}}</view>
          <view>心愿类型：{{item.wishType}}</view>
          <view>心愿发布时间：{{item.xyDate}}</view>
          <view>所属街道：{{item.xyStreet}}</view>
          <view class='zhuangtai' bindtap='state' wx:if="{{item.xyFlag === 'true'?true:false}}">已认领</view>
          <view class='zhuangtai'  wx:if="{{item.xyFlag === 'true'?false:true}}">认领</view>
        </view>
      </view>
    </scroll-view>
    
</view>